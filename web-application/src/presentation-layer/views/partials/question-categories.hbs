<div name="categories">
    {{#if categories}}
        <div class="medium-3 columns" data-sticky-container>
            <div class="sticky" data-sticky data-anchor="content">
                <h4>Categories</h4>
                <ul>
                    {{#each categories}}
                        {{#if ../isAnswered}}
                            <li><a href="/questions/by-category/{{name}}/answered">{{name}}</a></li>  
                        {{else}}    
                            <li><a href="/questions/by-category/{{name}}/unanswered">{{name}}</a></li>  
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    {{/if}}
</div>