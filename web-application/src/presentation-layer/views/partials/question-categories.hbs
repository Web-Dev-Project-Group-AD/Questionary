<div name="categories">
    {{#if categories}}
        <div class="medium-3 columns" data-sticky-container>
            <div class="sticky" data-sticky data-anchor="content">
                <h4>Categories</h4>
                <ul>
                    {{#each categories}}
                        <li><a href="/questions/by-category/{{this}}/{{#if ../isAnswered}}answered{{else}}unanswered{{/if}}">{{this}}</a></li>  
                    {{/each}}
                </ul>
            </div>
        </div>
    {{/if}}
</div>